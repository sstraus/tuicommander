{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TUICommander",
  "version": "0.5.0",
  "identifier": "com.tuic.commander",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://127.0.0.1:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "TUICommander",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": true,
        "transparent": false,
        "resizable": true,
        "fullscreen": false,
"hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "trafficLightPosition": { "x": 13, "y": 20 },
        "backgroundColor": "#000000",
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' plugin:; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self' ipc: tauri:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["tuic"]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEU1MEM3NkIyREQzNDMwMDMKUldRRE1EVGRzbllNNWMxR2xrSFpzblI5clZHd1hCZEV0TGg4WlFaNVp2QjY2bWlUQ1R6Mkt3cWcK",
      "endpoints": [
        "https://github.com/sstraus/tuicommander/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
